<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".PostActivity"
    tools:layout_editor_absoluteY="25dp"
    >


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_post"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <ImageButton
        android:id="@+id/addPostImage"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/input_gray"
        android:contentDescription="@string/add_your_image"
        android:padding="8dp"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_post"
        app:srcCompat="@drawable/add_post_high2" />

    <EditText
        android:id="@+id/addPostText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@drawable/input_gray"
        android:ems="10"
        android:hint="@string/write_your_text_here"
        android:inputType="textMultiLine"
        android:lines="3"
        android:padding="8dp"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/addPostImage"
        app:layout_constraintHorizontal_bias="0.552"
        app:layout_constraintStart_toStartOf="@+id/addPostImage"
        app:layout_constraintTop_toBottomOf="@+id/addPostImage" />

    <Button
        android:id="@+id/addPostSubmit"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/button_primary"
        android:text="@string/post"
        app:layout_constraintEnd_toEndOf="@+id/addPostText"
        app:layout_constraintStart_toStartOf="@+id/addPostText"
        app:layout_constraintTop_toBottomOf="@+id/addPostText" />


</android.support.constraint.ConstraintLayout>